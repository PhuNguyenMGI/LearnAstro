---
import Layout from "../../layouts/Layout.astro"
import BlogList from "../../components/ListData.vue";
import Banner from "../../components/Banner.svelte";
import { mapUrl } from "../../api/index";

const getBlogs = async () => {
  const res = await fetch(mapUrl("blogs"));
  return res.json();
};
const data = await getBlogs();
---

<Layout title="Blogs">
    <div class="relative z-0">
        <BlogList listData={data} />
        <Banner classes="fixed top-[72px] right-16 z-[-1]" client:scroll src="/samples/banner.jpg">
          <template slot="additional-content">
            <div>Check out today!</div>
          </template>
        </Banner>
    </div>
</Layout>